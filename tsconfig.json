{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2020"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "built",
    "paths": {
      "@actions": [
        "./actions"
      ],
      "@actions/*": [
        "./actions/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@reducers": [
        "./reducers"
      ],
      "@reducers/*": [
        "./reducers/*"
      ],
      "@selectors/*": [
        "./selectors/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@typings/*": [
        "./typings/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@graphql/*": [
        "./graphql/*"
      ]
    },
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true, // added for nivo.js
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./typings/npm"
    ],
    "incremental": true
  },
  "exclude": [
    ".next",
    "out"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
